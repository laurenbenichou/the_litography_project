<!-- Map -->
<leaflet ng-hide="isVisible" defaults="defaults" markers="markers" layers="layers" height="100%" width="100%" maxbounds="maxbounds" ></leaflet>

<!-- Hamburger Menu Button -->
<div ng-hide="isVisible" class="ham-menu">
  <div class="off-canvas__container off-canvas__content">
    <a href ng-click="toggleNav(); toggle = !toggle" ng-class="{'active' : toggle}" id="hamburger-icon">
      <span class="line line-1"></span>
      <span class="line line-2"></span>
      <span class="line line-3"></span>
      <span class="menu-text">Menu</span>
    </a>
  </div>
</div>

<!-- Menu/nav bar -->
<nav class="off-canvas__nav">
 <div class="menu">

  <!-- Authors -->
  <span class="dropdown authors" dropdown on-toggle="toggled(open)">
    <a href class="dropdown-toggle" dropdown-toggle>
      Authors
    </a>

    <flex-slider ng-click="$event.stopPropagation()" class="dropdown-menu" slide="author in authors track by $index" control-nav="false" selector= ".slides > li" max-item="3" item-margin="10" item-width="420" slideshow="false" direction-nav="true"  prev-text="" next-text="" animation="slide">
    <li ng-click="$event.stopPropagation()" href ui-sref="home.authors({ author_id: author.id })"><em>{{author.first_name}}<br/><strong>{{author.last_name}}</strong></em></li>
  </flex-slider>
</span>

<!-- Stories -->
<span class="dropdown" dropdown on-toggle="toggled(open)">
  <a href class="dropdown-toggle" dropdown-toggle >Stories</a>
  <ul class="dropdown-menu stories">
    <li>
      <a ng-click="$event.stopPropagation(); toggleOverlays('allItems')" href>All Past</a>
    </li>
    <li>
      <a ng-click="$event.stopPropagation(); toggleOverlays('lastMonth')" href>Last Month's</a>
    </li>
    <li>
      <a ng-click="$event.stopPropagation(); toggleOverlays('thisMonth')" href>This Month's</a>
    </li>
  </ul>
</span>

<!-- Calendar -->
<a class="bogus">Calendar</a>
<a class="bogus">Blog</a>
</div>
</nav>
