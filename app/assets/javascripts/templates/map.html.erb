  <!-- Upper Menu -->
  <div ng-hide="isVisible" class="upper-menu">
    <div class="upper-logo">
      <%= image_tag("upper-logo.png")%>
    </div>
    <ul>
      <li>About</li>
      <li>Donate</li>
      <li><a href ui-sref="home.pitch">Pitch Guide</a></li>
      <li>Report An Error</li>
    </ul>
  </div>

  <!-- side bar -->
  <div ng-hide="isVisible" class="side-menu">
    <%= image_tag("side_menu.png")%>
    <div class="latest-stories">
      <em><h1>Latest Stories</h1></em>
      <div class="row" ng-repeat="story in stories">
        <div ng-if="story.book_report == false">
        <div class="highlight-item" ng-click="focusMarker(story.id)">
          <div class="col-xs-5 ">
            <img ng-src="{{story.square_feature_image}}">
          </div>
          <div class="col-xs-7 text-left">
            <em><h3>{{story.title}}</h3></em>
            <em><p>A story by {{story.author}}</p></em>
          </div>
        </div>
      </div>
      <div ng-if="story.book_report == true">
        <div class="highlight-item" ng-click="openModal(story.author)">
          <div class="col-xs-3 ">
            <img ng-src="{{story.square_feature_image}}">
          </div>
          <div class="col-xs-7 col-xs-offset-1 text-left">
            <em><h3>{{story.title}}</h3></em>
            <em><p>A story by {{story.author}}</p></em>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>


